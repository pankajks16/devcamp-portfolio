<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolios_item.id %>">
    <%= image_tag portfolios_item.thumb_image, class: "card-img-top" unless portfolios_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
      	<span><%= link_to portfolios_item.title, portfolio_show_path(portfolios_item) %></span>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
		  		<%= link_to "Edit", edit_portfolio_path(portfolios_item), class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
		  		<%= link_to 'Delete', portfolio_path(portfolios_item.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>