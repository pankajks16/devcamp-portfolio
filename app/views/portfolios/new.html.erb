<h2>Create a new Portfolio item</h2>
<%= form_with(model: @portfolios_item, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.fields_for :technologies do |technology_form| %>
      <%= technology_form.text_field :name, placeholder: "Enter Name" %> 
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
