<div class="container mt30">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
		</div>
		<div class="col-md-5">			
			<p><h3><%= @portfolio_item.title %></h3></p>
			<em><%= @portfolio_item.subtitle %></em>
			<p><%= @portfolio_item.body %></p>

			<% if @portfolio_item.technologies.count != 0 %>
				<h2>Technologies Used: </h2>
				<% @portfolio_item.technologies.each do |t| %>
					<p><%= t.name %></p>
				<% end %>
			<% end %>
			<%= link_to 'Edit Item', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' if logged_in?(:site_admin)%>
		</div>
	</div>
</div>